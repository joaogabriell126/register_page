html
  head
    link(rel="stylesheet", href="/style.css")
    title Cadastre-se
  body
    main.flex.justify-center.items-center.h-screen.bg-gray-400    
        form.flex.justify-evenly.flex-col.items-center.w-110.h-100.border.rounded-md.bg-white
            h1(class="font-['Inter'] text-3xl font-bold") Cadastre-se
            div.flex.justify-between.flex-col.w-90.h-85
                div.flex.flex-col
                    label(for="email") Email
                    input(type="email", name="email", class="border blue-red-700 h-12 border-gray-500 rounded-md p-2")
                div.flex.flex-col
                    label(for="password") Senha
                    input(type="password", name="password", class="border blue-red-700 h-12 border-gray-500 rounded-md p-2")
                div.flex.flex-col
                    label(for="confirmPassword") Confirme sua senha
                    input(type="password", name="confirmPassword", class="border blue-red-700 h-12 border-gray-500 rounded-md p-2")
                button(class="border border-none rounded-md w-full h-12 bg-blue-300 duration-400 hover:bg-blue-400 hover:scale-102 cursor-pointer") Cadastrar
